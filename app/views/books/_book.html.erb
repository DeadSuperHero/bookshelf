<div class="box">
    <div class="cover">
    <%= image_tag book.image_url(:cover_thumb).to_s %>
    </div>
        <div class="box-content">
            <h4><%= link_to book.title, book %></h4>
            <h5><%= book.author %></h5>
            <br />
            <%= book.review %>
            <br />
            <br />
            <% book.tags.any? %>
                <% book.tags.each do |tag| %>
                <%= link_to tag.name, tagged_url(:tag => tag.name) %>
            <% end %>
            <br />
            <%= link_to ' ', edit_book_path(book), :class => "icon-pencil" %>
            <%= link_to ' ', book, :class => "icon-cross", method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div>